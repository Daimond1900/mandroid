<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/crime_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/crime_list_checkbox"
        android:padding="4dp"
        android:text="标题"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/crime_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp" />

    <TextView
        android:id="@+id/crime_list_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crime_list_title"
        android:layout_toLeftOf="@id/crime_list_checkbox"
        android:padding="4dp"
        android:text="时间" />
    <View
        android:layout_below="@id/crime_list_date"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"/>
</RelativeLayout>